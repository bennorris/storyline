<p><%=story.full_story.nil? ? story.beginning : story.full_story %></p>

<br>
  <p class="upvotes">total upvotes: <%=story.all_upvotes.size%></p>
  <div class="add-sentence-from-story-page">
  <% if !story.sentences.last.nil? %>
    <% if story.sentences.last.user != current_user %>
      <%=form_for sentence, :url => story_sentences_path(story.id), :method => :post do |f| %>
      <%=f.text_field :content %>
      <%=f.submit "Add your sentence" %>
        <% end %>
      <%end%>
<% else %>
    <% if story.user != current_user %>
    <%=form_for sentence, :url => story_sentences_path(story.id), :method => :post do |f| %>
    <%=f.text_field :content %>
    <%=f.submit "Add your sentence" %>
      <% end %>
      <% end %>
<% end %>

<br>
  <div class="story-started-by">
    <h3>Started by:</h3><br><p><%=story.user.username%></p><br>
  </div>
