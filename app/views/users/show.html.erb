<%= javascript_include_tag 'home_page' %>

<div class="story-box">
 <h2>Start a new story.</h2>
 <br>
  <%= render 'new_story_form', story: @story %>
</div>

<div class="other-stories-box">
   <h2> Add to a different story. </h2>
   <div class="individual-story">
     <div id="story-preview">
       <p id="story-beginning"></p>
       <p id="sentence-adder"></p>
       <p><a href="" id="contributors-and-more">see contributors & more</a></p><br>
       <button type="button" id="full-story-button" val="">see full story</button>
     </div>
       <br>
       <button type="button" id="next-button">NEXT</button>
   </div>
</div>

<div class="your-stories-box">
  <h2>Your Stories</h2>
  <div class="your-stories-content">
   <h3 id='user-story-full'></h3>
   <p><a id="next-user-story">details</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a data-confirm="Are you sure you want to delete this?" data-method="delete" href id="delete-your-story">delete</a></p>
   <button type="button" id="your-stories-button">NEXT</button>
   <br>
   <button type="button" id="view-all-button">View All Stories</button>
  <div>
    <h3 id='story-list'></h3>
  </div>
  </div>
</div>

<div class="your-contributions-box">
<h2>Your Contributions</h2>
<% if flash[:deleted]%>
      <p style="color:red"><%=flash[:deleted] %></p>
  <% end %>
  <% if @user_contributions.size < 1 %>
      <p> None, yet! </p>
 <% else %>
    <%= render 'your_contributions', :sentence => @user_contributions.sample %>
 <% end %>
</div>
